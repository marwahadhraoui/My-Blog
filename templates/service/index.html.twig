{% block title %}{% endblock %}

{% block body %}
	<style>{% include 'css/service.css' %}</style>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<div class="container-contact100">

		<div class="container d-flex justify-content-center my-5">
			<div
				class="row my-2 mx-2 main">
				<!--left-column-->
				<div
					class="col-md-5 col-12 mycol">
					<!--image-->
					<img src="{{service.image}}" width="100%" height="100%" >
				</div>

				<!--right-column-->

				
					<form action="{{path('reserver')}}" methode="POST">
						<div class="form-group row">
							<span class="contact100-form-title">
								{{service.nom}}<br>
								Prix :
								{{service.prix}}€

							</span>
							<label for="text" class="col-3 col-form-label">Nom</label>
							<div class="col-8">
								<div class="input-group">
									<div class="input-group-prepend">
										<div class="input-group-text">
											<i class="fa fa-address-card"></i>
										</div>
									</div>
									<input id="serviceId" name="serviceId" type="number" value="{{service.id}}" hidden>
									<input id="nom" name="nom" placeholder="nom" type="text" class="form-control" required="required">
								</div>
							</div>
						</div>
						<div class="form-group row">
							<label for="text1" class="col-3 col-form-label">Prénom</label>
							<div class="col-8">
								<div class="input-group">
									<div class="input-group-prepend">
										<div class="input-group-text">
											<i class="fa fa-address-card"></i>
										</div>
									</div>
									<input id="text1" name="prenom" placeholder="prénom" type="text" required="required" class="form-control">
								</div>
							</div>
						</div>
						<div class="form-group row">
							<label for="text2" class="col-3 col-form-label">E-mail</label>
							<div class="col-8">
								<div class="input-group">
									<div class="input-group-prepend">
										<div class="input-group-text">
											<i class="fa fa-envelope"></i>
										</div>
									</div>
									<input id="text2" name="mail" placeholder="adresse" type="email" class="form-control">
								</div>
							</div>
						</div>
						<div class="form-group row">
							<label for="text3" class="col-3 col-form-label">Téléphone</label>
							<div class="col-8">
								<div class="input-group">
									<div class="input-group-prepend">
										<div class="input-group-text">
											<i class="fa fa-phone"></i>
										</div>
									</div>
									<input id="text3" name="telephone" placeholder="+" type="text" class="form-control" required="required">
								</div>
							</div>
						</div>
						<div class="form-group row">
							<div class="offset-4 col-8">
								<button name="submit" type="submit" class="favorite styled">Réserver</button>
							</div>
						</div>
					</form>
				
			</div>
		</div>
    </div>
{% endblock %}
