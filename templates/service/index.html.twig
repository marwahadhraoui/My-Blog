{% block title %}{% endblock %}

{% block body %}
	{# ********************************************************************************************************************************************** #}
	<style>{% include 'css/reservation.css' %}</style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	{# ************************************************************************************************************************************************* #}

	<div id="booking" class="section" style="background-image: url('{{service.image}}');">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-7 col-md-push-5">
						<div class="booking-cta">
							<h1>{{service.nom}}</h1>
							<h1>{{service.prix}}€</h1>
						</div>
					</div>
					<div class="col-md-4 col-md-pull-7">
						<div class="booking-form">
							<form action="{{path('reserver')}}" method="POST">

								<div class="row">
									<div class="col-sm-6">
										<div class="form-group">
											<input id="serviceId" name="serviceId" type="number" value="{{service.id}}" hidden>
											<span class="form-label">Nom
											</span>
											<input class="form-control" type="text" name="nom" id="nom" required placeholder="nom">
										</div>
									</div>
									<div class="col-sm-6">
										<div class="form-group">
											<span class="form-label">Prénom</span>
											<input class="form-control" type="text" name="prenom" id="prenom" required placeholder="prénom">
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-6">
										<div class="form-group">
											<span class="form-label">Ville</span>
											<input class="form-control" type="text" name="ville" id="ville" required placeholder="ville">
										</div>
									</div>
									<div class="col-sm-6">
										<div class="form-group">
											<span class="form-label">Télephone</span>
                                        <input class="form-control" type="tel" name="telephone" id="telephone" required placeholder="téléphone" minlength="8" min="0">
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-12">
										<div class="form-group">
											<span class="form-label">E-mail</span>
											<input class="form-control" type="email" name="mail" id="mail" required placeholder="exemple@gmail.com">
										</div>
									</div>


								</div>

								{% if service.stock >0 %}
									<div class="form-btn">
										<input class="submit-btn" name="submit" type="submit" value="Réserver">
									</div>
								{% else %}
									<button class="submit-btn" name="submit" type="button" data-toggle="modal" data-target="#myModal">Réserver</button>
								{% endif %}


							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<!-- Modal -->
		<div class="modal fade" id="myModal" role="dialog">
			<div
				class="modal-dialog">

				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						
						<h4 class="modal-title">Oops</h4>
					</div>
					<div class="modal-body">
						<p class="alert alert-danger" role="alert">Désolé ! Le service est momentanément indisponible</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}

{# ****************************************************************************************************** #}
