{% block title %}{% endblock %}

{% block body %}
	{# ********************************************************************************************************************************************** #}
	<style>{% include 'css/reservation.css' %}</style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
	{# ************************************************************************************************************************************************* #}
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-7 col-md-push-5">
						<div class="booking-cta">
							<h1>Faites votre réservation</h1>
							<p>Quand tu entres dans une chambre d'hôtel, tu verrouilles la porte, et tu sais qu'il y a un secret, qu'il y a du luxe, qu'il y a de la fantaisie

							</p>
						</div>
					</div>
					<div class="col-md-4 col-md-pull-7">
						<div class="booking-form">
							<form action="{{path('check')}}" methode="POST">

								<div class="row">
									<div class="col-sm-6">
										<div class="form-group">
											<span class="form-label">Arrivée</span>
											<input class="form-control" type="date" name="checkIn" id="checkIn" required min="">
										</div>
									</div>
									<div class="col-sm-6">
										<div class="form-group">
											<span class="form-label">Départ</span>
											<input class="form-control" type="date" name="checkOut" id="checkOut" required min="">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-4">
										<div class="form-group">
											<span class="form-label">Chambres</span>
											<select class="form-control" name='room'>
												{% for chambre in chambres %}
													<option value="{{chambre.id}}">{{chambre.type}}</option>
												{% endfor %}
											</select>
											<span class="select-arrow"></span>
										</div>
									</div>
									<div class="col-sm-4">
										<div class="form-group">
											<span class="form-label">Adultes</span>
											<select class="form-control" name='adult'>
												{% for i in 1..6 %}
													<option value="{{i}}">{{i}}</option>
												{%  endfor %}
											</select>
											<span class="select-arrow"></span>
										</div>
									</div>
									<div class="col-sm-4">
										<div class="form-group">
											<span class="form-label">Enfants</span>
											<select class="form-control" name='children'>
												{% for i in 0..6 %}
													<option value="{{i}}">{{i}}</option>
												{%  endfor %}
											</select>
											<span class="select-arrow"></span>
										</div>
									</div>
								</div>
								<div class="form-btn">
									<button class="submit-btn" name="submit" type="submit">Voir les disponibilités</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		var today = new Date();
var dd = today.getDate();
var mm = today.getMonth() + 1; // January is 0 so need to add 1 to make it 1!
var yyyy = today.getFullYear();
if (dd < 10) {
dd = '0' + dd
}
if (mm < 10) {
mm = '0' + mm
}

today = yyyy + '-' + mm + '-' + dd;

document.getElementById("checkIn").setAttribute("min", today);
document.getElementById("checkOut").setAttribute("min", today);
	</script>

{% endblock %}
